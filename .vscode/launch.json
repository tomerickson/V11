   "version": "0.2.0",
   "configurations": [
   

      {
         "name": "Launch Edge",
         "request": "launch",
         "type": "pwa-msedge",
         "url": "http://localhost:8080",
         "webRoot": "${workspaceFolder}",
      },
      {
         "name": "Attach Edge",
         "request": "attach",
         "type": "msedge",
         "url": "http://localhost:4200",
         "webRoot": "${workspaceFolder}"
      },
      {
         "type": "pwa-chrome",
         "request": "launch",
         "name": "Launch Chrome against localhost",
         "url": "http://localhost:8080",
         "webRoot": "${workspaceFolder}"
      },
      {
         "type": "chrome",
         "request": "attach",
         "name": "Attach Chrometo localhost:4200",
         "url": "http://localhost:4200",
         "port": 4200,
         "webRoot": "${workspaceFolder}"
      }
   ]
}